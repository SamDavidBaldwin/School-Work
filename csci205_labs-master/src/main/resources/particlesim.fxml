<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lab11.ex2.ParticleSystemController">
   <children>
      <Canvas fx:id="canvas" height="600.0" width="650.0" AnchorPane.leftAnchor="150.0" />
      <VBox alignment="CENTER" layoutY="37.0" prefWidth="150.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="650.0" AnchorPane.topAnchor="0.0">
         <children>
            <CheckBox fx:id="checkboxContinuous" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Continuous">
               <padding>
                  <Insets bottom="20.0" />
               </padding>
            </CheckBox>
            <Button fx:id="btnGenerate" mnemonicParsing="false" text="Generate Emitters" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                <Button fx:id="btnStart" mnemonicParsing="false" text="Start">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnStop" mnemonicParsing="false" text="Stop" />
               </children>
            </HBox>
            <Slider fx:id="numSlider" majorTickUnit="50.0" max="200.0" showTickLabels="true" showTickMarks="true" />
            <Label text="Number of Particles" />
         </children>
      </VBox>
   </children>
</AnchorPane>
